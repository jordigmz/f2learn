{% extends 'layouts/layout-admin.html.twig' %}

{% block body %}
		<div class="row">
			<div class="col-lg-12 m-b30">
				<div class="widget-box">
					<div class="wc-title">
						<h4>New course</h4>
					</div>
					<div class="widget-inner">
						{{ form_start(form, {
							'attr': {
								'class': 'edit-profile m-b30',
								'enctype': 'multipart/form-data'
							}
						}) }}
						<div class="row">
							<div class="form-group col-12">
								{{ form_label(form.title, 'Title *', {
									'label_attr': {
										'class': 'col-form-label'
									}
								}) }}
								<div>
									{{ form_widget(form.title, {
										'attr': {
											'class': 'form-control'
										}
									}) }}
								</div>
								<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.title) }}</span>
							</div>
							<div class="form-group col-12">
								{{ form_label(form.image, 'Image *', {
									'label_attr': {
										'class': 'col-form-label'
									}
								}) }}
								<div>
									{{ form_widget(form.image, {
										'attr': {
											'class': 'form-control'
										}
									}) }}
								</div>
								<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.image) }}</span>
							</div>
							<div class="form-group col-3">
								{{ form_label(form.duration, 'Duration *', {
									'label_attr': {
										'class': 'col-form-label'
									}
								}) }}
								<div>
									{{ form_widget(form.duration, {
										'attr': {
											'class': 'form-control'
										}
									}) }}
								</div>
								<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.duration) }}</span>
							</div>
							<div class="form-group col-3">
								{{ form_label(form.level, 'Level *', {
									'label_attr': {
										'class': 'col-form-label'
									}
								}) }}
								<div>
									{{ form_widget(form.level, {
										'attr': {
											'class': 'form-control'
										}
									}) }}
								</div>
								<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.level) }}</span>
							</div>
							<div class="form-group col-3">
								{{ form_label(form.language, 'Language *', {
									'label_attr': {
										'class': 'col-form-label'
									}
								}) }}
								<div>
									{{ form_widget(form.language, {
										'attr': {
											'class': 'form-control'
										}
									}) }}
								</div>
								<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.language) }}</span>
							</div>
							<div class="form-group col-3">
								{{ form_label(form.assessments, 'Assessment *', {
									'label_attr': {
										'class': 'col-form-label'
									}
								}) }}
								<div>
									{{ form_widget(form.assessments, {
										'attr': {
											'class': 'form-control'
										}
									}) }}
								</div>
								<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.assessments) }}</span>
							</div>
							<div class="form-group col-3">
								{{ form_label(form.price, 'Price *', {
									'label_attr': {
										'class': 'col-form-label'
									}
								}) }}
								<div>
									{{ form_widget(form.price, {
										'attr': {
											'class': 'form-control'
										}
									}) }}
								</div>
								<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.price) }}</span>
							</div>
							<div class="seperator"></div>
							<div class="form-group col-12">
								{{ form_label(form.description, 'Description *', {
									'label_attr': {
										'class': 'col-form-label'
									}
								}) }}
								{{ form_widget(form.description, {
									'attr': {
										'class': 'form-control'
									}
								}) }}
							</div>
							<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.description) }}</span>
							<div class="col-12">
								<button class="btn button-md">{{ button_label|default('Add course') }}</button>
							</div>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>
		{% include 'parts/courses.part.html.twig' %}
{% endblock %}