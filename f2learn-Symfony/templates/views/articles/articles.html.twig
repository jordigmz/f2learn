{% extends 'layouts/layout-admin.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col-lg-12 m-b30">
			<div class="widget-box">
				<div class="wc-title">
					<h4>New Article</h4>
				</div>
				<div class="widget-inner">
					{{ form_start(form, {
						'attr': {
							'class': 'edit-profile m-b30',
							'enctype': 'multipart/form-data'
						}
					}) }}
					<div class="row">
						<div class="form-group col-12">
							{{ form_label(form.nombre, 'Name *', {
								'label_attr': {
									'class': 'col-form-label'
								}
							}) }}
							<div>
								{{ form_widget(form.nombre, {
									'attr': {
										'class': 'form-control'
									}
								}) }}
							</div>
							<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.nombre) }}</span>
						</div>
						<div class="form-group col-4">
							{{ form_label(form.precio, 'Price *', {
								'label_attr': {
									'class': 'col-form-label'
								}
							}) }}
							<div>
								{{ form_widget(form.precio, {
									'attr': {
										'class': 'form-control'
									}
								}) }}
							</div>
							<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.precio) }}</span>
						</div>
						<div class="form-group col-4">
							{{ form_label(form.fechaCaducidad, 'Expiration date *', {
								'label_attr': {
									'class': 'col-form-label'
								}
							}) }}
							<div>
								{{ form_widget(form.fechaCaducidad, {
									'attr': {
										'class': 'form-control'
									}
								}) }}
							</div>
							<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.fechaCaducidad) }}</span>
						</div>
						<div class="form-group col-4">
							{{ form_label(form.imagen, 'Image *', {
								'label_attr': {
									'class': 'col-form-label'
								}
							}) }}
							<div>
								{{ form_widget(form.imagen, {
									'attr': {
										'class': 'form-control'
									}
								}) }}
							</div>
							<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.imagen) }}</span>
						</div>
						<div class="seperator"></div>
						<div class="form-group col-12">
							{{ form_label(form.descripcion, 'Description *', {
								'label_attr': {
									'class': 'col-form-label'
								}
							}) }}
							{{ form_widget(form.descripcion, {
								'attr': {
									'class': 'form-control'
								}
							}) }}
						</div>
						<span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.descripcion) }}</span>
						<div class="col-12">
							<button class="btn button-md">{{ button_label|default('Add article') }}</button>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% include 'parts/articles.part.html.twig' %}

{% endblock %}
