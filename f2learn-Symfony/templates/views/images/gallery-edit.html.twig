{% extends 'layouts/layout-admin.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 m-b30">
            <div class="widget-box">
                <div class="wc-title">
                    <h4>Edit image</h4>
                </div>
                <div class="widget-inner">
                    {{ form_start(form, {
                        'attr': {
                            'class': 'edit-profile m-b30',
                            'enctype': 'multipart/form-data'
                        }
                    }) }}
                    <div class="row">
                        <div class="form-group col-12">
                            {{ form_label(form.name, 'Image *', {
                                'label_attr': {
                                    'class': 'col-form-label'
                                }
                            }) }}
                            <div>
                                {{ form_widget(form.name, {
                                    'attr': {
                                        'class': 'form-control'
                                    }
                                }) }}
                            </div>
                            <span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.name) }}</span>
                        </div>
                        <div class="form-group col-12">
                            {{ form_label(form.category, 'Category *', {
                                'label_attr': {
                                    'class': 'col-form-label'
                                }
                            }) }}
                            <div>
                                {{ form_widget(form.category, {
                                    'attr': {
                                        'class': 'form-control'
                                    }
                                }) }}
                            </div>
                            <span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.category) }}</span>
                        </div>
                        <div class="seperator"></div>
                        <div class="form-group col-12">
                            {{ form_label(form.description, 'Description *', {
                                'label_attr': {
                                    'class': 'col-form-label'
                                }
                            }) }}
                            {{ form_widget(form.description, {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }) }}
                        </div>
                        <span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.description) }}</span>
                        <div class="col-12">
                            <button class="btn button-md">{{ button_label|default('Edit image') }}</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}