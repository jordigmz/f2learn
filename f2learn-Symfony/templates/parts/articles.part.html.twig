<div class="row">
    <!-- left part start -->
    <div class="col-lg-12 col-xl-12 col-md-12">
        <!-- blog grid -->
        <div id="masonry" class="ttr-blog-grid-3 row">
            {% for articulo in articulos %}
                <div class="post action-card col-xl-6 col-lg-6 col-md-12 col-xs-12 m-b40">
                    <div class="recent-news">
                        <div class="action-box">
                            <img src="{{ asset('assets/images/articulos/' ~ articulo.imagen ) }}" alt="{{ articulo.descripcion }}" title="{{ articulo.nombre }}" style="max-width: 400px;" />
                        </div>
                        <div class="info-bx">
                            <h5 class="post-title"><a href="{{ path('article', { 'id': articulo.id }) }}">{{ articulo.nombre }}</a></h5>
                            <p style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden;">{{ articulo.descripcion }}</p>
                            <div style="display: flex; flex-direction: row;">
                                <a href="{{ path('articles_edit', {'id': articulo.id}) }}" class="btn btn-warning mt-2 mb-4 mr-2" style="background-color: #007bff; color: white;">
                                    <span class="ttr-icon"><i class="fa fa-edit" aria-hidden="true"></i></span>
                                    <span class="ttr-label">Edit</span>
                                </a>
                                <a href="{{ path('articles_delete_json', {'id': articulo.id}) }}" class="btn btn-danger mt-2 mb-4 deleteJson" style="background-color: #dc3545; color: white;">
                                    <span class="ttr-icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                                    <span class="ttr-label">Delete</span>
                                </a>
                            </div>
                            <div class="post-extra">
                                <a href="{{ path('article', { id: articulo.id }) }}" class="btn-link">Ver detalles</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>