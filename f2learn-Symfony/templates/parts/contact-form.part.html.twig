{{ form_start(form, {
    'attr': {
        'class': 'contact-bx'
    }
    }) }}
    <div class="heading-bx left">
        <h2 class="title-head">Get In <span>Touch</span></h2>
    </div>
    <div class="row placeani">
        <div class="col-lg-6">
            <div class="form-group">
                <div class="input-group">
                    {{ form_widget(form.name, {
                        'attr': {
                            'class': 'form-control valid-character',
                            'placeholder': 'Your Name *'
                        }
                    }) }}
                    <span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.name) }}</span>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <div class="input-group">
                    {{ form_widget(form.email, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Your Email Address *'
                        }
                    }) }}
                    <span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.email) }}</span>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <div class="input-group">
                    {{ form_widget(form.phone, {
                        'attr': {
                            'class': 'form-control int-value',
                            'placeholder': 'Your Phone'
                        }
                    }) }}
                    <span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.phone) }}</span>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <div class="input-group">
                    {{ form_widget(form.subject, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Subject *'
                        }
                    }) }}
                    <span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.subject) }}</span>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <div class="input-group">
                    {{ form_widget(form.message, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Type Message *'
                        }
                    }) }}
                    <span style="color: #dc3545; font-size: 14px;">{{ form_errors(form.message) }}</span>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <button class="btn button-md">{{ button_label|default('Send Message') }}</button>
        </div>
    </div>
{{ form_end(form) }}